private List<String> tarefas = new ArrayList<>();
    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
        String itemTarefa = jTextField1.getText();
        if (itemTarefa.equals("")){
            JOptionPane.showMessageDialog(null, "Insira no campo a tarefa que deseja"
                    + " adicionar. ",
                   "Erro", JOptionPane.WARNING_MESSAGE);
        } else {
            if (jComboBox1.getSelectedItem().equals("Pendente")){
                tarefas.add(itemTarefa + " - [Pendente]");
            
            } else {
                tarefas.add(itemTarefa + " - [Concluída]");
            }
        }
        
    }                                        

    private void jButton3ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
        StringBuilder listaTaref = new StringBuilder();
        if (tarefas.isEmpty()) {
            JOptionPane.showMessageDialog(null, "Nenhuma tarefa adicionada. ",
                   "Erro", JOptionPane.WARNING_MESSAGE);
        } else {
            
            for (int i=0; i < tarefas.size(); i++){
                    listaTaref.append(tarefas.get(i)).append("\n");
                }
            
            JOptionPane.showMessageDialog(null, listaTaref.toString(),
                   "Lista de Tarefas", JOptionPane.INFORMATION_MESSAGE);
        }
        
    }                                        

    private void jButton2ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
        StringBuilder tarefasnum = new StringBuilder();
        if (tarefas.isEmpty()) {
            JOptionPane.showMessageDialog(null, "Nenhuma tarefa adicionada. ",
                   "Erro", JOptionPane.WARNING_MESSAGE);
        } else {
            
            for (int i = 0; i < tarefas.size(); i++){
                tarefasnum.append(tarefas.get(i)).append(" (Posição: " + i + ") "
                        + "\n");
            }
            JOptionPane.showMessageDialog(null, tarefasnum.toString(),
                   "Lista Atual de Tarefas", JOptionPane.INFORMATION_MESSAGE);
        
            String Strremove = JOptionPane.showInputDialog(null, "Qual item gostaria de remover? "
                    + " Digite a posição. ");
            int remove = Integer.parseInt(Strremove);
            String itemremov = tarefas.get(remove);
            tarefas.remove(remove);
            JOptionPane.showMessageDialog(null, "Item removido: " + itemremov.toString(),
                   "Item removido", JOptionPane.INFORMATION_MESSAGE);
        }
    }                                        

    private void jButton4ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
        StringBuilder tarefasnum = new StringBuilder();
        if (tarefas.isEmpty()){
            JOptionPane.showMessageDialog(null, "Nenhuma tarefa adicionada. ",
                   "Erro", JOptionPane.WARNING_MESSAGE);
        } else {
            for (int i = 0; i < tarefas.size(); i++){
                tarefasnum.append(tarefas.get(i)).append(" (Posição: " + i + ") "
                        + "\n");
            }
            JOptionPane.showMessageDialog(null, tarefasnum.toString(),
                   "Lista Atual de Tarefas", JOptionPane.INFORMATION_MESSAGE);
            try{
                String Intedit = JOptionPane.showInputDialog(null, "Qual item gostaria de editar? "
                    + " Digite a posição. ");
                int edita = Integer.parseInt(Intedit);
                String itemeditar = tarefas.get(edita);
            
                if (itemeditar.contains("- [Pendente]")){
                    tarefas.set(edita, itemeditar.replace(" - [Pendente]", " - [Concluída]"));
                } else if (itemeditar.contains("- [Concluída]")){
                    tarefas.set(edita, itemeditar.replace(" - [Concluída]", " - [Pendente]"));
                }
                JOptionPane.showMessageDialog(null, "Item editado!" ,
                   "Aviso", JOptionPane.INFORMATION_MESSAGE);
                
            }catch (Exception e){
                JOptionPane.showMessageDialog(null, "Numero de posição inválido" ,
                   "ERRO!", JOptionPane.WARNING_MESSAGE);
            }
                
                }
    }                                        

    private void jButton5ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
        String caminho = System.getProperty("user.home") + "\\Desktop\\lista_tarefas.txt";
        Path Caminho = Paths.get(caminho);
        if (tarefas.isEmpty()){
            JOptionPane.showMessageDialog(null, "Não foi possível gerar a lista "
                    + "pois nenhuma tarefa foi adicionada." ,
                   "Aviso", JOptionPane.INFORMATION_MESSAGE);
        }else{
            try {
                StringBuilder listaTaref = new StringBuilder();
                for (int i=0; i < tarefas.size(); i++){
                    listaTaref.append(tarefas.get(i)).append("\n");
                }
                String tarefas1 = tarefas.toString();
                tarefas1 = tarefas1.replace(", ", "\n");
                tarefas1 = tarefas1.replace("[", "");
                tarefas1 = tarefas1.replace("]", "");
                if (tarefas1.contains("Pendente") || tarefas1.contains("Concluída")){
                    tarefas1 = tarefas1.replace("Pendente", "[Pendente]");
                    tarefas1 = tarefas1.replace("Concluída", "[Concluída]");
                }
                
                if (Caminho.toFile().exists()){
                    try(FileWriter fw = new FileWriter(caminho, true);
                        BufferedWriter bw = new BufferedWriter(fw);
                        PrintWriter out = new PrintWriter(bw)){
                        out.println("\n" + tarefas1);
                        JOptionPane.showMessageDialog(null, "Um arquivo de tarefas já "
                    + "existe, e seus novos dados foram adicionados." ,
                   "Aviso", JOptionPane.INFORMATION_MESSAGE);
                    
                }catch (IOException ex) {
                        Logger.getLogger(ListaT.class.getName()).log(Level.SEVERE, null, ex);
                    }
            }
                else {
                    Files.createFile(Caminho);
                    Files.write(Caminho, tarefas1.getBytes(), StandardOpenOption.APPEND);
                    JOptionPane.showMessageDialog(null, "Lista criada com sucesso "
                    + "na sua área de trabalho!" ,
                   "Aviso", JOptionPane.INFORMATION_MESSAGE);
                }
                
            } catch (IOException ex) {
                Logger.getLogger(ListaT.class.getName()).log(Level.SEVERE, null, ex);
            }
                    }
        
    }                                        

